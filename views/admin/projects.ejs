<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

<div class="admin-container">

    <div class="admin-header">
        <h1>Manage Projects</h1>
        <div>
            <a href="/admin/dashboard" class="back-btn">Back</a>
            <a href="/admin/projects/add" class="btn">Add Project</a>
        </div>
    </div>

    <% if (projects.length === 0) { %>
        <p>No projects added yet.</p>
    <% } else { %>

        <table class="admin-table">
            <thead>
                <tr>
                    <th>Order</th>
                    <th>Project Title</th>
                    <th>Video</th>
                    <th>ZIP</th>
                </tr>
            </thead>
            <tbody>
                <% projects.forEach(project => { %>
                    <tr>
                        <td><%= project.order %></td>
                        <td><%= project.title %></td>
                        <td>
                            <a href="<%= project.videoUrl %>" target="_blank">
                                View Video
                            </a>
                        </td>
                        <td>
                            <a href="<%= project.zipUrl %>" download>
                                Download ZIP
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

    <% } %>

</div>

</body>
</html>
